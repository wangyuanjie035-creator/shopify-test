<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {%- render 'stylesheets' -%}

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    {%- comment -%}
      Hide the “Draft Order Management” entry for non-admin customers.
      To adjust the allowlist, edit ADMIN_EMAILS below.
    {%- endcomment -%}
    <script>
      (() => {
        const ADMIN_EMAILS = ['jonathan.wang@sainstore.com', 'jonthan.wang@gmail.com', 'issac.yu@sainstore.com','kitto.chen@sainstore.com','cherry@sain3.com', 'keihen.luo@sain3.com','nancy.lin@sainstore.com'];
        const customerEmail = ({{ customer.email | json }} || '').toLowerCase();
        const isAdmin = ADMIN_EMAILS.includes(customerEmail);

        const hideMoreMenus = () => {
          // Hide the "More" disclosure entry/link
          document.querySelectorAll('details.disclosure').forEach(d => {
            const summaryText = (d.querySelector('summary')?.textContent || '').trim().toLowerCase();
            if (summaryText === 'more') {
              d.style.display = 'none';
            }
          });
          document.querySelectorAll('a, button').forEach(el => {
            const txt = (el.textContent || '').trim().toLowerCase();
            if (txt === 'more') {
              el.style.display = 'none';
              if (el.parentElement && el.parentElement.tagName === 'LI') {
                el.parentElement.style.display = 'none';
              }
            }
          });
        };

        const hideCartIcon = () => {
          // Hide cart icon (best-effort selector coverage)
          const selectors = [
            'a[href="/cart"]',
            'a[href*="/cart"]',
            'button[data-cart-toggle]',
            '[data-cart-toggle]',
            '.header__icon--cart',
            '.header__icon-item',
            '.site-header__cart',
            '.icon-cart',
            '[aria-label="Cart"]',
            '[data-icon-type="cart"]',
            '[data-testid="cart-count-bubble"]'
          ];
          document.querySelectorAll(selectors.join(',')).forEach(el => {
            const li = el.closest('li');
            if (li) li.style.display = 'none';
            el.style.display = 'none';
          });
        };

        // Translate specific Chinese labels to English at runtime.
        // This is necessary when labels come from Shopify Navigation / product titles (not from theme code).
        const applyEnglishTextMap = () => {
          const map = new Map([
            ['\u5b9a\u5236\u5316\u52a0\u5de5\u670d\u52a1', 'Custom Manufacturing'],
            ['\u6211\u7684\u8be2\u4ef7', 'My Quotes'],
            ['\u8349\u7a3f\u8ba2\u5355\u7ba1\u7406', 'Draft Orders'],
            ['\u8054\u7cfb\u65b9\u5f0f', 'Contact'],
            ['3D\u6253\u5370\u670d\u52a1', '3D Printing Service'],
            ['CNC\u52a0\u5de5\u670d\u52a1', 'CNC Machining Service']
          ]);

          const candidates = document.querySelectorAll(
            'a, button, summary, span, p, h1, h2, h3, h4, h5, h6, li, div'
          );
          candidates.forEach((el) => {
            if (!el) return;
            const txt = (el.textContent || '').trim();
            if (!txt) return;

            // Exact match (ignoring whitespace)
            const compact = txt.replace(/\s+/g, '');
            for (const [cn, en] of map.entries()) {
              if (compact === cn) {
                el.textContent = en;
                return;
              }
            }

            // Substring match (useful when menus include extra wrappers/icons)
            for (const [cn, en] of map.entries()) {
              if (txt.includes(cn)) {
                el.textContent = txt.replaceAll(cn, en);
                return;
              }
            }
          });
        };

        if (!isAdmin) {
          const hideLinks = () => {
            const links = document.querySelectorAll('a[href*="admin-draft-orders"], a[href*="/pages/admin-draft-orders"]');
            links.forEach(a => {
              a.style.display = 'none';
              if (a.parentElement && a.parentElement.tagName === 'LI') {
                a.parentElement.style.display = 'none';
              }
            });
            // Hide "More" entry and cart icon, then apply English labels
            hideMoreMenus();
            hideCartIcon();
            applyEnglishTextMap();
          };
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', hideLinks);
          } else {
            hideLinks();
          }
        } else {
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
              hideMoreMenus();
              hideCartIcon();
              applyEnglishTextMap();
            });
          } else {
            hideMoreMenus();
            hideCartIcon();
            applyEnglishTextMap();
          }
        }
      })();
    </script>
  </body>
</html>
