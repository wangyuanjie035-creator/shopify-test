async function refreshOrderStatus() {
  try {
    // ç›´æ¥æŸ¥è¯¢æœ€æ–°çš„è®¢å•è¯¦æƒ…
    const response = await fetch(`${API_BASE}/get-draft-order-simple?id=${encodeURIComponent(draftOrderId)}&${authQuery}`);
    
